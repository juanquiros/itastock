{% extends 'base.html.twig' %}

{% block title %}Configuración ARCA | ItaStock{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h4 mb-1">Configuración ARCA</h1>
            <p class="text-muted mb-0">Gestioná la facturación electrónica para tu comercio.</p>
        </div>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.arcaEnabled) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.arcaEnvironment) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.taxPayerType) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.cuitEmisor) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.passphrase) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.certPem) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.privateKeyPem) }}
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button class="btn btn-primary">Guardar configuración</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <div class="fw-semibold">Estado de conexión</div>
                <div class="text-muted small">Verificá el token ARCA con tu certificado actual.</div>
            </div>
            <form method="post" action="{{ path('app_admin_settings_arca_test') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('arca_test') }}">
                <button class="btn btn-outline-secondary">Probar conexión</button>
            </form>
        </div>
    </div>
{% endblock %}
