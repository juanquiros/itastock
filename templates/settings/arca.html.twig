{% extends 'base.html.twig' %}

{% block title %}Configuración ARCA | ItaStock{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h4 mb-1">Configuración ARCA</h1>
            <p class="text-muted mb-0">Configurá los datos de facturación y realizá pruebas de conexión.</p>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="post" action="{{ path('app_settings_arca') }}">
                <div class="row">
                    <div class="col-lg-6">
                        <label class="form-label" for="arca-cuit">CUIT</label>
                        <input class="form-control" id="arca-cuit" name="arca_cuit" placeholder="Ingresá el CUIT" />
                    </div>
                    <div class="col-lg-6">
                        <label class="form-label" for="arca-punto-venta">Punto de venta</label>
                        <input class="form-control" id="arca-punto-venta" name="arca_pos" placeholder="Ej: 0001" />
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="h6">Probar conexión</h2>
            <p class="text-muted">Verificá que la comunicación con ARCA esté funcionando correctamente.</p>
            <form method="post" action="{{ path('app_settings_arca_test') }}">
                <button class="btn btn-outline-primary">Probar conexión</button>
            </form>
        </div>
    </div>
{% endblock %}
