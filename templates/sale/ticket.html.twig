{% extends 'base.html.twig' %}

{% block title %}Ticket de venta - ItaStock{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% set printPageSize = 'A4' %}
    {% if ticketPaperSize is defined and ticketPaperSize == 'THERMAL_80MM' %}
        {% set printPageSize = '80mm auto' %}
    {% elseif ticketPaperSize is defined and ticketPaperSize == 'THERMAL_58MM' %}
        {% set printPageSize = '58mm auto' %}
    {% endif %}
    <style>
        @page {
            size: {{ printPageSize }};
            margin: 8mm;
        }

        @media print {
            header,
            nav,
            .navbar,
            .btn-group,
            .btn,
            .alert {
                display: none !important;
            }
            .card {
                box-shadow: none !important;
                border: none !important;
            }
            body {
                background: #fff !important;
            }
            .ticket-print-container {
                max-width: none !important;
                width: 100% !important;
                flex: 0 0 100% !important;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-6 ticket-print-container">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            {% if showInvoiceAsTicket %}
                                <p class="text-uppercase text-muted mb-1 small">Factura {{ arcaInvoice.cbteTipo == 'FACTURA_B' ? 'B' : 'C' }}</p>
                                <h1 class="h4 mb-0">N° {{ '%04d'|format(arcaInvoice.arcaPosNumber) }}-{{ '%08d'|format(arcaInvoice.cbteNumero) }}</h1>
                                <p class="mb-0 text-muted">{{ (arcaInvoice.issuedAt ?? sale.createdAt)|date('d/m/Y H:i') }}</p>
                                {% if arcaInvoice.cae %}
                                    <p class="mb-0 text-muted">CAE: {{ arcaInvoice.cae }}</p>
                                {% endif %}
                                {% if arcaInvoice.caeDueDate %}
                                    <p class="mb-0 text-muted">Vto. CAE: {{ arcaInvoice.caeDueDate|date('d/m/Y') }}</p>
                                {% endif %}
                            {% else %}
                                <p class="text-uppercase text-muted mb-1 small">Remito</p>
                                <h1 class="h4 mb-0">N° {{ remitoNumber }}</h1>
                                <p class="mb-0 text-muted">{{ sale.createdAt|date('d/m/Y H:i') }}</p>
                            {% endif %}
                            <p class="mb-0 text-muted">Vendedor: {{ sale.createdBy ? sale.createdBy.fullName : 'N/D' }}</p>
                            <div class="mt-2">
                                {% if sale.status == 'VOIDED' %}
                                    <span class="badge bg-danger">ANULADA</span>
                                {% else %}
                                    <span class="badge bg-success">CONFIRMADA</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                                Imprimir
                            </button>
                            {% if showInvoiceAsTicket %}
                                <a class="btn btn-outline-primary" href="{{ path('app_sale_arca_pdf', { id: sale.id }) }}">
                                    Descargar factura PDF
                                </a>
                            {% else %}
                                <a class="btn btn-outline-primary" href="{{ path('app_sale_ticket_pdf', { id: sale.id }) }}">
                                    PDF
                                </a>
                            {% endif %}
                            {% if arcaInvoice and arcaInvoice.status == 'AUTHORIZED' %}
                                <a class="btn btn-outline-success" href="{{ path('app_sale_arca_pdf', { id: sale.id }) }}">
                                    Ver factura
                                </a>
                            {% elseif arcaInvoice %}
                                <button class="btn btn-outline-warning" disabled>
                                    Factura {{ arcaInvoice.status|lower }}
                                </button>
                            {% elseif canInvoice %}
                                <button class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#arcaInvoiceModal">
                                    Facturar
                                </button>
                            {% endif %}
                            {% if arcaCreditNote and arcaCreditNote.status == 'AUTHORIZED' %}
                                <a class="btn btn-outline-danger" href="{{ path('app_sale_arca_credit_note_pdf', { id: sale.id }) }}">
                                    Ver NC
                                </a>
                            {% elseif arcaCreditNote %}
                                <button class="btn btn-outline-warning" disabled>
                                    NC {{ arcaCreditNote.status|lower }}
                                </button>
                            {% endif %}
                            <a class="btn btn-outline-secondary" href="{{ path('app_sale_new') }}">
                                Nueva venta
                            </a>
                        </div>
                    </div>

                    <div class="mt-3">
                        {% if showInvoiceAsTicket %}
                            <span class="badge bg-success">COMPROBANTE FISCAL</span>
                            <div class="small text-muted">
                                Factura electrónica autorizada por ARCA.
                            </div>
                        {% else %}
                            <span class="badge bg-warning text-dark">
                                NO VÁLIDO COMO TICKET FISCAL
                            </span>
                            <div class="small text-muted">
                                Comprobante tipo remito no fiscal emitido desde ItaStock.
                            </div>
                        {% endif %}
                    </div>


                    {% if sale.business.ticketHeaderImagePath %}
                        <div class="mt-3 text-center">
                            <img src="{{ sale.business.ticketHeaderImagePath }}" alt="Icono del comercio" style="max-height: 120px; max-width: 100%;">
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        <div class="fw-semibold">Comercio</div>
                        <div class="text-muted">{{ sale.business.name }}</div>
                    </div>

                    {% set headerLines = sale.business.ticketHeaderLines ? sale.business.ticketHeaderLines|replace({'\r': ''})|split('\n') : [] %}
                    {% if headerLines %}
                        <div class="mb-3 text-muted small text-center">
                            {% for line in headerLines %}
                                {% if line|trim %}
                                    <div>{{ line }}</div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        <div class="fw-semibold">Cliente</div>
                        {% if sale.customer %}
                            <div class="text-muted">{{ sale.customer.name }}</div>
                            {% if sale.customer.documentType or sale.customer.documentNumber %}
                                <div class="text-muted">
                                    {{ sale.customer.documentType ?: 'Documento' }}: {{ sale.customer.documentNumber ?: '-' }}
                                </div>
                            {% endif %}
                            {% if sale.customer.phone %}
                                <div class="text-muted">Teléfono: {{ sale.customer.phone }}</div>
                            {% endif %}
                            {% if sale.customer.address %}
                                <div class="text-muted">Dirección: {{ sale.customer.address }}</div>
                            {% endif %}
                            {% if sale.customer.customerType %}
                                <div class="text-muted">Tipo: {{ sale.customer.customerType }}</div>
                            {% endif %}
                            {% if sale.customer.priceList %}
                                <div class="text-muted">Lista: {{ sale.customer.priceList.name }}</div>
                            {% endif %}
                        {% else %}
                            <div class="text-muted">Consumidor Final</div>
                        {% endif %}
                    </div>

                    <div class="table-responsive mb-3">
                        <table class="table table-sm align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-end">Cant.</th>
                                    <th class="text-end">Precio</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in sale.items %}
                                    <tr>
                                        <td>{{ item.description }}</td>
                                        <td class="text-end">{{ item.qty|number_format(3, '.', ',') }}</td>
                                        <td class="text-end">${{ item.unitPrice }}</td>
                                        <td class="text-end">${{ item.lineTotal }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="mb-3">
                        <div class="fw-semibold">Pago</div>
                        <ul class="list-unstyled mb-0 text-muted">
                            {% for payment in sale.payments %}
                                <li>{{ payment.method }} · ${{ payment.amount }}</li>
                            {% else %}
                                <li>Sin pagos registrados</li>
                            {% endfor %}
                        </ul>
                    </div>

                    <div class="mb-2">
                        <div class="d-flex justify-content-between text-muted">
                            <span>Subtotal</span>
                            <span>${{ sale.subtotal }}</span>
                        </div>
                        <div class="d-flex justify-content-between text-muted">
                            <span>Descuentos</span>
                            <span>- ${{ sale.discountTotal }}</span>
                        </div>
                        {% if sale.saleDiscounts|length > 0 %}
                            <ul class="list-unstyled small text-muted mt-2 mb-0">
                                {% for saleDiscount in sale.saleDiscounts %}
                                    <li>{{ saleDiscount.discountName }} · -${{ saleDiscount.appliedAmount }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted">Total pagado</div>
                        <div class="h4 mb-0 fw-bold">${{ sale.total }}</div>
                    </div>

                    {% if sale.status == 'CONFIRMED' and is_granted('BUSINESS_ADMIN') and (arcaInvoice is empty or arcaInvoice.status != 'AUTHORIZED') %}
                        <div class="mt-3 text-end">
                            <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#voidSaleModal">Anular venta</button>
                        </div>
                    {% endif %}

                    {% if sale.status == 'CONFIRMED' and is_granted('BUSINESS_ADMIN') and canCreditNote %}
                        <div class="mt-3 text-end">
                            <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#creditNoteModal">Emitir nota de crédito</button>
                        </div>
                    {% endif %}

                    {% if sale.status == 'VOIDED' %}
                        <hr>
                        <div class="mb-2">
                            <div class="fw-semibold text-danger">Venta anulada</div>
                            <div class="text-muted small">
                                Fecha: {{ sale.voidedAt ? sale.voidedAt|date('d/m/Y H:i') : '-' }}<br>
                                Por: {{ sale.voidedBy ? sale.voidedBy.email : 'N/D' }}
                            </div>
                        </div>
                        {% if sale.voidReason %}
                            <div class="alert alert-danger mb-0">
                                <div class="fw-semibold mb-1">Motivo</div>
                                <div class="mb-0">{{ sale.voidReason }}</div>
                            </div>
                        {% endif %}
                    {% endif %}

                    {% if showInvoiceAsTicket %}
                        <div class="mt-3 text-center">
                            <div class="fw-semibold">QR ARCA</div>
                            {% if ticketQrDataUri %}
                                <img src="{{ ticketQrDataUri }}" alt="QR ARCA" style="width: 50%; height: auto;">
                            {% else %}
                                <div class="small text-muted">QR no disponible</div>
                            {% endif %}
                        </div>
                    {% endif %}

                    {% set footerLines = sale.business.ticketFooterLines ? sale.business.ticketFooterLines|replace({'\r': ''})|split('\n') : [] %}
                    {% if footerLines %}
                        <div class="mt-3 text-muted small text-center">
                            {% for line in footerLines %}
                                {% if line|trim %}
                                    <div>{{ line }}</div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endif %}

                    {% if sale.business.ticketFooterImagePath %}
                        <div class="mt-3 text-center">
                            <img src="{{ sale.business.ticketFooterImagePath }}" alt="Imagen final del ticket" style="max-height: 160px; max-width: 100%;">
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="text-center text-muted small">
                {% if showInvoiceAsTicket %}
                    Este documento corresponde a una factura electrónica autorizada.
                {% else %}
                    Este documento actúa como remito no fiscal.
                    <strong>NO VÁLIDO COMO TICKET FISCAL</strong>.
                {% endif %}
            </div>
        </div>
    </div>

    {% if canInvoice %}
        <div class="modal fade" id="arcaInvoiceModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" action="{{ path('app_sale_arca_issue', { id: sale.id }) }}">
                        <div class="modal-header">
                            <h5 class="modal-title">Confirmar facturación</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            {% if sale.customer is null %}
                                <div class="mb-3">
                                    <p class="text-muted mb-2">Elegí a nombre de quién se factura.</p>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" name="receiver_mode" id="receiverFinal" value="final" checked>
                                        <label class="form-check-label" for="receiverFinal">Consumidor final</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="receiver_mode" id="receiverCustomer" value="customer">
                                        <label class="form-check-label" for="receiverCustomer">Seleccionar cliente</label>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="receiverCustomerId">Cliente</label>
                                    <select class="form-select" id="receiverCustomerId" name="customer_id">
                                        <option value="">Seleccionar cliente</option>
                                        {% for customer in customers %}
                                            <option value="{{ customer.id }}">{{ customer.name }}{% if customer.documentNumber %} · {{ customer.documentNumber }}{% endif %}</option>
                                        {% endfor %}
                                    </select>
                                    <div class="form-text">Completá este campo solo si elegís “Seleccionar cliente”.</div>
                                </div>
                            {% endif %}
                            <p class="text-muted mb-3">Seleccioná el origen del precio para emitir la factura.</p>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="price_mode" id="priceHistoric" value="historic" checked>
                                <label class="form-check-label" for="priceHistoric">Usar precio histórico de la venta</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="price_mode" id="priceCurrent" value="current">
                                <label class="form-check-label" for="priceCurrent">Usar precio actual</label>
                            </div>
                            <input type="hidden" name="_token" value="{{ csrf_token('arca_invoice_' ~ sale.id) }}">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button class="btn btn-success">Facturar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}

    {% if sale.status == 'CONFIRMED' and is_granted('BUSINESS_ADMIN') %}
        <div class="modal fade" id="voidSaleModal" tabindex="-1" aria-labelledby="voidSaleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="voidSaleModalLabel">Anular venta</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" action="{{ path('app_admin_sales_void', { id: sale.id }) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('void_sale_' ~ sale.id) }}">
                        <div class="modal-body">
                            <p class="text-danger mb-3">Esta acción revierte stock, caja y cuenta corriente.</p>
                            <div class="mb-3">
                                <label class="form-label" for="void_reason">Motivo</label>
                                <textarea class="form-control" id="void_reason" name="reason" rows="3" required></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-danger">Anular venta</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}

    {% if sale.status == 'CONFIRMED' and is_granted('BUSINESS_ADMIN') and canCreditNote %}
        <div class="modal fade" id="creditNoteModal" tabindex="-1" aria-labelledby="creditNoteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="creditNoteModalLabel">Emitir nota de crédito</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" action="{{ path('app_admin_sales_credit_note_issue', { id: sale.id }) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('credit_note_' ~ sale.id) }}">
                        <div class="modal-body">
                            <p class="text-danger mb-3">Esta acción revierte stock, caja y cuenta corriente cuando se autoriza la NC.</p>
                            <div class="mb-3">
                                <label class="form-label" for="credit_note_reason">Motivo (opcional)</label>
                                <textarea class="form-control" id="credit_note_reason" name="reason" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-danger">Emitir nota de crédito</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
