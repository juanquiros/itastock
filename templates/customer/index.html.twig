{% extends 'base.html.twig' %}

{% block title %}Clientes - ItaStock{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <p class="text-uppercase text-muted mb-1 small">Clientes</p>
            <h1 class="h3 mb-0">Listado de clientes</h1>
            <p class="mb-0 text-muted">Administrá los clientes de tu comercio.</p>
        </div>
        <a class="btn btn-primary" href="{{ path('app_customer_new') }}">Nuevo cliente</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-center mb-3">
                <div class="col-md-6">
                    <input type="search" name="q" value="{{ query }}" class="form-control" placeholder="Buscar por nombre, documento o teléfono">
                </div>
                <div class="col-auto">
                    <button class="btn btn-outline-primary" type="submit">Buscar</button>
                </div>
                {% if query %}
                    <div class="col-auto">
                        <a class="btn btn-link" href="{{ path('app_customer_index') }}">Limpiar</a>
                    </div>
                {% endif %}
            </form>

            <div class="table-responsive">
                <table class="table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Documento</th>
                            <th>Teléfono</th>
                            <th>Tipo</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for customer in customers %}
                            <tr class="{% if not customer.isActive %}table-warning{% endif %}">
                                <td class="fw-semibold">{{ customer.name }}</td>
                                <td>
                                    {% if customer.documentNumber %}
                                        {{ customer.documentType ?: 'Doc' }} {{ customer.documentNumber }}
                                    {% else %}
                                        <span class="text-muted">Sin documento</span>
                                    {% endif %}
                                </td>
                                <td>{{ customer.phone ?: '-' }}</td>
                                <td>{{ customer.customerType|replace({'_': ' '})|title }}</td>
                                <td>
                                    {% if customer.isActive %}
                                        <span class="badge text-bg-success">Activo</span>
                                    {% else %}
                                        <span class="badge text-bg-secondary">Inactivo</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <div class="d-inline-flex gap-2">
                                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_customer_account', { id: customer.id }) }}">Cuenta</a>
                                        <a class="btn btn-sm btn-outline-primary" href="{{ path('app_customer_edit', { id: customer.id }) }}">Editar</a>
                                        <form method="post" action="{{ path('app_customer_delete', { id: customer.id }) }}" onsubmit="return confirm('¿Eliminar este cliente?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
                                            <button class="btn btn-sm btn-outline-danger" type="submit">Eliminar</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">No hay clientes cargados aún.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
