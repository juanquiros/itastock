{% extends 'base.html.twig' %}

{% block title %}Registrar pago - {{ customer.name }}{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col-lg-6 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <p class="text-uppercase text-muted mb-1 small">Cuenta corriente</p>
                    <h1 class="h4 mb-0">Registrar pago</h1>
                    <p class="mb-0 text-muted">{{ customer.name }} · Saldo: ${{ balance }}</p>
                </div>
                <a class="btn btn-outline-secondary" href="{{ path('app_customer_account', {id: customer.id}) }}">Volver</a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="amount">Importe a cobrar</label>
                            <input type="number" step="0.01" min="0.01" max="{{ balance }}" name="amount" id="amount" class="form-control" required>
                            <div class="form-text">No se permite cobrar más que el saldo pendiente.</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="method">Medio</label>
                            <select name="method" id="method" class="form-select" required>
                                <option value="CASH">Efectivo</option>
                                <option value="TRANSFER">Transferencia</option>
                                <option value="CARD">Tarjeta</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-semibold" for="note">Nota (opcional)</label>
                            <textarea name="note" id="note" class="form-control" rows="2" placeholder="Datos adicionales"></textarea>
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <a class="btn btn-outline-secondary" href="{{ path('app_customer_account', {id: customer.id}) }}">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Guardar pago</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
