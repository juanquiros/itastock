{% extends 'base.html.twig' %}

{% block title %}Usuarios | ItaStock{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h4 mb-1">Usuarios</h1>
            <p class="text-muted mb-0">Gestiona administradores y vendedores.</p>
        </div>
        <a class="btn btn-primary" href="{{ path('app_user_new') }}">Nuevo usuario</a>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Comercio</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if 'ROLE_ADMIN' in user.roles %}
                                <span class="badge bg-primary">Admin</span>
                            {% elseif 'ROLE_SELLER' in user.roles %}
                                <span class="badge bg-success">Vendedor</span>
                            {% else %}
                                <span class="badge bg-secondary">Usuario</span>
                            {% endif %}
                        </td>
                        <td>{{ user.business.name }}</td>
                        <td class="text-end">
                            <div class="d-flex justify-content-end gap-2">
                                <a class="btn btn-sm btn-outline-primary" href="{{ path('app_user_edit', {id: user.id}) }}">Editar</a>
                                <form method="post" action="{{ path('app_user_delete', {id: user.id}) }}" onsubmit="return confirm('Â¿Eliminar este usuario?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Eliminar</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">No hay usuarios registrados.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
