{% extends 'emails/_layout.html.twig' %}

{% block title %}Suscripción cancelada{% endblock %}

{% block content %}
    <h2 style="margin-top: 0;">Suscripción cancelada</h2>
    <p>Se registró una cancelación de suscripción.</p>
    <p>Comercio: <strong>{{ businessName|default('N/D') }}</strong></p>
    <p>Admin: <strong>{{ adminEmail|default('N/D') }}</strong></p>
    <p>Fecha de fin: <strong>{{ endsAt is defined and endsAt ? endsAt|date('d/m/Y') : 'N/D' }}</strong></p>
    <p style="margin: 24px 0;">
        <a href="{{ absolute_url(path('platform_subscriptions_index')) }}" style="background-color: #C62828; color: #ffffff; padding: 12px 18px; text-decoration: none; border-radius: 6px;">Revisar suscripciones</a>
    </p>
{% endblock %}
