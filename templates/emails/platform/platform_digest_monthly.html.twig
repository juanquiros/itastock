{% extends 'emails/_layout.html.twig' %}

{% block title %}Digest mensual plataforma{% endblock %}

{% block content %}
    <h2 style="margin-top: 0;">Digest mensual</h2>
    <p>Resumen agregado de la plataforma:</p>
    <ul style="padding-left: 18px;">
        <li>Desde: {{ periodStart is defined and periodStart ? periodStart|date('d/m/Y') : 'N/D' }}</li>
        <li>Hasta: {{ periodEnd is defined and periodEnd ? periodEnd|date('d/m/Y') : 'N/D' }}</li>
    </ul>
    <p><strong>Nuevos comercios:</strong> {{ newBusinesses|default('N/D') }}</p>
    <p><strong>Suscripciones canceladas:</strong> {{ canceledSubscriptions|default('N/D') }}</p>
    <p><strong>Demos vencidas:</strong> {{ expiredTrials|default('N/D') }}</p>
    <p style="margin: 24px 0;">
        <a href="{{ absolute_url(path('platform_reports_index')) }}" style="background-color: #C62828; color: #ffffff; padding: 12px 18px; text-decoration: none; border-radius: 6px;">Ver reportes</a>
    </p>
{% endblock %}
