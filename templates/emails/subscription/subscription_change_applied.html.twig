{% extends 'emails/_layout.html.twig' %}

{% block title %}Cambio aplicado{% endblock %}

{% block content %}
    <h2 style="margin-top: 0;">Cambio aplicado</h2>
    <p>Hola {{ userName|default('') }}, tu cambio de plan fue aplicado.</p>
    <p>Plan actual: <strong>{{ planName|default('N/D') }}</strong></p>
    <p>Fecha de aplicación: <strong>{{ appliedAt is defined and appliedAt ? appliedAt|date('d/m/Y') : 'N/D' }}</strong></p>
    <p style="margin: 24px 0;">
        <a href="{{ absolute_url(path('app_billing_subscription_show')) }}" style="background-color: #C62828; color: #ffffff; padding: 12px 18px; text-decoration: none; border-radius: 6px;">Ver suscripción</a>
    </p>
{% endblock %}
