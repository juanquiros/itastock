{% extends 'emails/_layout.html.twig' %}

{% block title %}Próximo cobro en 7 días{% endblock %}

{% block content %}
    <h2 style="margin-top: 0;">Próximo cobro en 7 días</h2>
    <p>Hola {{ userName|default('') }}, este es un recordatorio de tu próximo cobro.</p>
    <p>Plan: <strong>{{ planName|default('N/D') }}</strong></p>
    <p>Fecha de cobro: <strong>{{ nextChargeAt is defined and nextChargeAt ? nextChargeAt|date('d/m/Y') : 'N/D' }}</strong></p>
    <p style="margin: 24px 0;">
        <a href="{{ absolute_url(path('app_billing_subscription_show')) }}" style="background-color: #C62828; color: #ffffff; padding: 12px 18px; text-decoration: none; border-radius: 6px;">Gestionar suscripción</a>
    </p>
{% endblock %}
