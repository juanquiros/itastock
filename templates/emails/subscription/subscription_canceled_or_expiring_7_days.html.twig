{% extends 'emails/_layout.html.twig' %}

{% block title %}Suscripción por finalizar{% endblock %}

{% block content %}
    <h2 style="margin-top: 0;">Tu suscripción está por finalizar</h2>
    <p>Hola {{ userName|default('') }}, tu suscripción se canceló o está por expirar en los próximos días.</p>
    <p>Plan: <strong>{{ planName|default('N/D') }}</strong></p>
    <p>Fecha de fin: <strong>{{ endsAt is defined and endsAt ? endsAt|date('d/m/Y') : 'N/D' }}</strong></p>
    <p style="margin: 24px 0;">
        <a href="{{ absolute_url(path('app_billing_subscription_show')) }}" style="background-color: #C62828; color: #ffffff; padding: 12px 18px; text-decoration: none; border-radius: 6px;">Revisar suscripción</a>
    </p>
{% endblock %}
