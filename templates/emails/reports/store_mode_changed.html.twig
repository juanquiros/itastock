{% extends 'emails/_layout.html.twig' %}

{% block title %}Modo de tienda actualizado{% endblock %}

{% block content %}
    <h2 style="margin-top: 0;">Modo de tienda actualizado</h2>
    <p>Hola {{ userName|default('') }}, el modo de la tienda fue actualizado.</p>
    <p>Nuevo modo: <strong>{{ storeMode|default('N/D') }}</strong></p>
    <p>Fecha del cambio: <strong>{{ changedAt is defined and changedAt ? changedAt|date('d/m/Y H:i') : 'N/D' }}</strong></p>
    <p style="margin: 24px 0;">
        <a href="{{ absolute_url(path('app_dashboard')) }}" style="background-color: #C62828; color: #ffffff; padding: 12px 18px; text-decoration: none; border-radius: 6px;">Ir al dashboard</a>
    </p>
{% endblock %}
