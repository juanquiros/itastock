{% extends 'base.html.twig' %}

{% block title %}Elegir comercio{% endblock %}

{% block body %}
<div class="container">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="h4 mb-3">Elegí el comercio que querés gestionar</h1>

            {% if memberships is empty %}
                <div class="alert alert-warning">No tenés comercios activos asignados.</div>
            {% else %}
                <div class="list-group">
                    {% for membership in memberships %}
                        <form method="post" class="list-group-item list-group-item-action d-flex flex-column flex-md-row align-items-md-center gap-2">
                            <div class="flex-grow-1">
                                <div class="fw-semibold">{{ membership.business.name }}</div>
                                <small class="text-muted">Rol: {{ membership.role }}</small>
                            </div>
                            <input type="hidden" name="business_id" value="{{ membership.business.id }}">
                            <button class="btn btn-primary ms-md-auto" type="submit">
                                Seleccionar
                            </button>
                        </form>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
