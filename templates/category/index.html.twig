{% extends 'base.html.twig' %}

{% block title %}Categorías · ItaStock{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <p class="text-uppercase text-muted mb-1 small fw-semibold">Productos</p>
            <h1 class="h4 mb-0">Categorías</h1>
            <p class="text-secondary mb-0">Organizá tu catálogo por rubros y mantené todo en orden.</p>
        </div>
        <a class="btn btn-primary" href="{{ path('app_category_new') }}">Nueva categoría</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td class="fw-semibold">{{ category.name }}</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_category_edit', { id: category.id }) }}">Editar</a>
                                        <form method="post" action="{{ path('app_category_delete', { id: category.id }) }}" onsubmit="return confirm('¿Eliminar esta categoría?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                            <button class="btn btn-sm btn-outline-danger" type="submit">Eliminar</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td class="text-center text-muted" colspan="2">Aún no hay categorías cargadas.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
