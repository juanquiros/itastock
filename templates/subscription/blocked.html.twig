{% extends 'base.html.twig' %}

{% block title %}Acceso restringido{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-4 text-center">
                    {% set mode = access.mode %}
                    <h1 class="h4 mb-3">
                        {% if mode == 'READONLY' %}
                            Modo solo lectura
                        {% else %}
                            Cuenta bloqueada
                        {% endif %}
                    </h1>
                    {% if mode == 'READONLY' %}
                        <p class="text-muted">Tu cuenta está en modo solo lectura. Podés acceder a reportes y exportaciones.</p>
                    {% else %}
                        <p class="text-muted">Tu cuenta está bloqueada. Activá un plan para continuar.</p>
                    {% endif %}
                    {% if access.endsAt %}
                        <p class="text-muted">Vencimiento: {{ access.endsAt|date('d/m/Y') }}</p>
                    {% endif %}
                    <div class="d-flex justify-content-center gap-2">
                        <a class="btn btn-primary" href="{{ path('public_pricing') }}">Ver planes</a>
                        <a class="btn btn-outline-secondary" href="{{ path('public_contact') }}">Contactar soporte</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
