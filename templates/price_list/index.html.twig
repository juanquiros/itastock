{% extends 'base.html.twig' %}

{% block title %}Listas de precio - ItaStock{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h3 mb-0">Listas de precio</h1>
        <p class="text-muted mb-0">Definí listas para cada tipo de cliente.</p>
    </div>
    <a class="btn btn-primary" href="{{ path('app_price_list_new') }}">Nueva lista</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form class="row g-2 align-items-end mb-3" method="get">
            <div class="col-md-6">
                <label class="form-label">Buscar</label>
                <input type="text" name="q" value="{{ query }}" class="form-control" placeholder="Nombre de lista">
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100" type="submit">Filtrar</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Default</th>
                        <th>Activa</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for list in priceLists %}
                        <tr>
                            <td>{{ list.name }}</td>
                            <td>{{ list.isDefault ? 'Sí' : 'No' }}</td>
                            <td>{{ list.isActive ? 'Sí' : 'No' }}</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-dark" href="{{ path('app_price_list_products', {id: list.id}) }}">Precios</a>
                                <a class="btn btn-sm btn-outline-primary" href="{{ path('app_price_list_edit', {id: list.id}) }}">Editar</a>
                                <form method="post" action="{{ path('app_price_list_delete', {id: list.id}) }}" class="d-inline" onsubmit="return confirm('¿Eliminar esta lista?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ list.id) }}">
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted">No hay listas cargadas.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
