{% extends 'base.html.twig' %}

{% block title %}Reporte de caja{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <p class="text-uppercase text-secondary fw-semibold mb-1 small">Operaciones</p>
            <h1 class="h3 mb-0">Reporte de caja</h1>
        </div>
        {% set currentBusiness = current_business() %}
        <div class="badge bg-light text-dark border">{{ currentBusiness ? currentBusiness.name : 'Sin comercio' }}</div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <div class="text-uppercase text-secondary small fw-semibold">Apertura</div>
                    <div class="h5 mb-0">{{ cashSession.openedAt|date('d/m/Y H:i') }}</div>
                </div>
                {% if cashSession.closedAt %}
                    <span class="badge bg-secondary">Cerrada</span>
                {% else %}
                    <span class="badge bg-success">Abierta</span>
                {% endif %}
            </div>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="text-muted small">Apertura por</div>
                    <div class="fw-semibold">{{ cashSession.openedBy.fullName }}</div>
                </div>
                <div class="col-md-3">
                    <div class="text-muted small">Saldo inicial</div>
                    <div class="fw-semibold">${{ cashSession.initialCash }}</div>
                </div>
                <div class="col-md-3">
                    <div class="text-muted small">Cierre</div>
                    <div class="fw-semibold">{{ cashSession.closedAt ? cashSession.closedAt|date('d/m/Y H:i') : '—' }}</div>
                </div>
                <div class="col-md-3">
                    <div class="text-muted small">Conteo efectivo cierre</div>
                    <div class="fw-semibold">{{ cashSession.finalCashCounted ? '$' ~ cashSession.finalCashCounted : 'Pendiente' }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="mb-3">Totales por método</h5>
                    {% if totals %}
                        <ul class="list-unstyled mb-0">
                            {% for method, total in totals %}
                                <li class="d-flex justify-content-between py-2 border-bottom small">
                                    <span class="text-uppercase fw-semibold">{{ method }}</span>
                                    <span class="fw-bold">${{ total }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <div class="text-muted">No hay pagos en esta sesión.</div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="mb-3">Notas</h5>
                    <p class="text-muted mb-3">Usá este resumen para conciliación rápida al cierre.</p>
                    <div class="d-flex flex-column gap-2">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Estado</span>
                            <span class="fw-semibold">{{ cashSession.closedAt ? 'Cerrada' : 'Abierta' }}</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Diferencia en efectivo</span>
                            {% if summary.difference is not null %}
                                {% set diff = summary.difference + 0 %}
                                <span class="fw-semibold {{ diff == 0 ? 'text-success' : 'text-danger' }}">${{ diff|number_format(2, '.', ',') }}</span>
                            {% else %}
                                <span class="text-muted">Pendiente</span>
                            {% endif %}
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Ventas registradas</span>
                            <span class="fw-semibold">{{ totals ? totals|length : 0 }} métodos</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a class="btn btn-outline-secondary" href="{{ path('app_cash_status') }}">Volver a caja</a>
        {% if is_granted('BUSINESS_ADMIN') %}
            <a class="btn btn-outline-primary" href="{{ path('app_admin_cash_pdf', {id: cashSession.id}) }}">PDF resumido</a>
            <a class="btn btn-outline-primary" href="{{ path('app_admin_cash_pdf', {id: cashSession.id, detail: 1}) }}">PDF detallado</a>
        {% endif %}
        {% if cashSession.isOpen %}
            <a class="btn btn-primary" href="{{ path('app_sale_new') }}">Seguir vendiendo</a>
        {% endif %}
    </div>

    <div class="card shadow-sm border-0 mt-4">
        <div class="card-body">
            <h5 class="mb-3">Ventas de la sesión</h5>
            {% set sales = summary.sales ?? [] %}
            {% if sales %}
                <div class="table-responsive">
                    <table class="table table-sm align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Hora</th>
                                <th>Cliente</th>
                                <th>Método</th>
                                <th class="text-end">Total</th>
                                <th class="text-end">Detalle</th>
                                <th>Comprobantes</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for sale in sales %}
                                {% set detailId = 'sale-detail-' ~ sale.saleId %}
                                {% set canIssueArca = arcaEnabled
                                    and is_granted('BUSINESS_ADMIN')
                                    and not sale.arcaInvoiceId
                                    and sale.arcaEnabledForThisCashier
                                    and sale.arcaMode == 'INVOICE'
                                    and sale.arcaPosNumber %}
                                <tr>
                                    <td>{{ sale.saleId }}</td>
                                    <td>{{ sale.createdAt ? sale.createdAt|date('d/m/Y H:i') : '' }}</td>
                                    <td>{{ sale.customerName }}</td>
                                    <td>{{ sale.paymentMethod }}</td>
                                    <td class="text-end fw-semibold">${{ sale.total }}</td>
                                    <td class="text-end">
                                        {% if (summary.saleDetails[sale.saleId] ?? []) is not empty %}
                                            <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#{{ detailId }}" aria-expanded="false" aria-controls="{{ detailId }}">
                                                Ver items
                                            </button>
                                        {% else %}
                                            <span class="text-muted">Sin detalle</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column gap-1">
                                            <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_sale_ticket_pdf', { id: sale.saleId }) }}">Remito PDF</a>
                                            {% if sale.arcaInvoiceStatus == 'AUTHORIZED' %}
                                                <a class="btn btn-sm btn-outline-success" href="{{ path('app_sale_arca_pdf', { id: sale.saleId }) }}">Factura PDF</a>
                                            {% elseif sale.arcaInvoiceId %}
                                                <span class="small text-muted">Factura {{ sale.arcaInvoiceStatus|lower }}</span>
                                            {% elseif canIssueArca %}
                                                <button class="btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#arcaInvoiceModal-{{ sale.saleId }}">
                                                    Facturar
                                                </button>
                                            {% else %}
                                                <span class="small text-muted">Solo remito</span>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% if (summary.saleDetails[sale.saleId] ?? []) is not empty %}
                                    <tr class="collapse" id="{{ detailId }}">
                                        <td colspan="7" class="bg-light">
                                            <div class="table-responsive mb-0">
                                                <table class="table table-sm mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th>Producto</th>
                                                            <th class="text-end">Cantidad</th>
                                                            <th class="text-end">Precio</th>
                                                            <th class="text-end">Total</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {% for item in summary.saleDetails[sale.saleId] %}
                                                            <tr>
                                                                <td>{{ item.description }}</td>
                                                                <td class="text-end">{{ item.qty }}</td>
                                                                <td class="text-end">${{ item.unitPrice }}</td>
                                                                <td class="text-end">${{ item.lineTotal }}</td>
                                                            </tr>
                                                        {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% for sale in sales %}
                    {% set canIssueArca = arcaEnabled
                        and is_granted('BUSINESS_ADMIN')
                        and not sale.arcaInvoiceId
                        and sale.arcaEnabledForThisCashier
                        and sale.arcaMode == 'INVOICE'
                        and sale.arcaPosNumber %}
                    {% if canIssueArca %}
                        <div class="modal fade" id="arcaInvoiceModal-{{ sale.saleId }}" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form method="post" action="{{ path('app_admin_cash_issue_arca', { saleId: sale.saleId }) }}">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Confirmar facturación</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            {% set hasCustomer = sale.customerName != 'Consumidor final' %}
                                            {% if not hasCustomer %}
                                                <div class="mb-3">
                                                    <p class="text-muted mb-2">Elegí a nombre de quién se factura.</p>
                                                    <div class="form-check mb-2">
                                                        <input class="form-check-input" type="radio" name="receiver_mode" id="receiverFinal-{{ sale.saleId }}" value="final" checked>
                                                        <label class="form-check-label" for="receiverFinal-{{ sale.saleId }}">Consumidor final</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="receiver_mode" id="receiverCustomer-{{ sale.saleId }}" value="customer">
                                                        <label class="form-check-label" for="receiverCustomer-{{ sale.saleId }}">Seleccionar cliente</label>
                                                    </div>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label" for="receiverCustomerId-{{ sale.saleId }}">Cliente</label>
                                                    <select class="form-select" id="receiverCustomerId-{{ sale.saleId }}" name="customer_id">
                                                        <option value="">Seleccionar cliente</option>
                                                        {% for customer in customers %}
                                                            <option value="{{ customer.id }}">{{ customer.name }}{% if customer.documentNumber %} · {{ customer.documentNumber }}{% endif %}</option>
                                                        {% endfor %}
                                                    </select>
                                                    <div class="form-text">Completá este campo solo si elegís “Seleccionar cliente”.</div>
                                                </div>
                                            {% endif %}
                                            <p class="text-muted mb-3">Seleccioná el origen del precio para emitir la factura.</p>
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="radio" name="price_mode" id="priceHistoric-{{ sale.saleId }}" value="historic" checked>
                                                <label class="form-check-label" for="priceHistoric-{{ sale.saleId }}">Usar precio histórico de la venta</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="price_mode" id="priceCurrent-{{ sale.saleId }}" value="current">
                                                <label class="form-check-label" for="priceCurrent-{{ sale.saleId }}">Usar precio actual</label>
                                            </div>
                                            <input type="hidden" name="_token" value="{{ csrf_token('arca_invoice_cash_' ~ sale.saleId) }}">
                                            <input type="hidden" name="cash_session_id" value="{{ cashSession.id }}">
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            <button class="btn btn-success">Facturar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            {% else %}
                <div class="text-muted">No hay ventas registradas para esta sesión.</div>
            {% endif %}
        </div>
    </div>
{% endblock %}
