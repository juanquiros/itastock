{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js" defer></script>
    <script>
        let dashboardPollerId;
        let dashboardCharts;
        let dashboardAbortController;

        function resetDashboard() {
            if (dashboardPollerId) {
                clearInterval(dashboardPollerId);
                dashboardPollerId = null;
            }

            if (dashboardAbortController) {
                dashboardAbortController.abort();
                dashboardAbortController = null;
            }

            if (dashboardCharts) {
                dashboardCharts.salesHourChart.destroy();
                dashboardCharts.paymentChart.destroy();
                dashboardCharts.weekChart.destroy();
                dashboardCharts = null;
            }

            if (document.body) {
                delete document.body.dataset.dashboardInitialized;
            }
        }

        function bootDashboard() {
            if (!document.getElementById('chart-sales-hour')) {
                return;
            }

            if (document.body?.dataset.dashboardInitialized) {
                return;
            }

            document.body.dataset.dashboardInitialized = 'true';
            const formatter = {
                currency: new Intl.NumberFormat('es-AR', { style: 'currency', currency: 'ARS', minimumFractionDigits: 2, maximumFractionDigits: 2 }),
                number: new Intl.NumberFormat('es-AR', { maximumFractionDigits: 0 }),
                percent: new Intl.NumberFormat('es-AR', { minimumFractionDigits: 0, maximumFractionDigits: 1 })
            };

            const initialData = {{ summary|json_encode|raw }};
            const POLL_MS = {{ pollMs }};
            const kpiElements = document.querySelectorAll('[data-kpi]');
            const syncStatus = document.getElementById('sync-status');
            dashboardCharts = initCharts(initialData.data.charts);
            renderAll(initialData);
            startPolling();

            function formatValue(value, format) {
                if (value === null || value === undefined) {
                    return 'Caja no abierta';
                }

                switch (format) {
                    case 'currency':
                        return formatter.currency.format(value);
                    case 'percent':
                        return formatter.percent.format(value) + '%';
                    default:
                        return formatter.number.format(value);
                }
            }

            function animateKpi(el, newValue, format) {
                const previous = Number(el.dataset.value ?? (format === 'currency' || format === 'percent' ? 0 : 0));
                const start = isFinite(previous) ? previous : 0;
                const target = newValue ?? 0;
                const diff = target - start;
                const duration = 650;
                const startTime = performance.now();

                function step(now) {
                    const progress = Math.min((now - startTime) / duration, 1);
                    const eased = 1 - Math.pow(1 - progress, 3);
                    const current = start + diff * eased;
                    el.textContent = newValue === null ? 'Caja no abierta' : formatValue(current, format);

                    if (progress < 1) {
                        requestAnimationFrame(step);
                    } else {
                        el.dataset.value = target;
                        el.classList.remove('kpi-up', 'kpi-down');
                        if (target > start) {
                            flashKpi(el, 'kpi-up');
                        } else if (target < start) {
                            flashKpi(el, 'kpi-down');
                        }
                    }
                }

                requestAnimationFrame(step);
            }

            function flashKpi(el, cls) {
                const card = el.closest('[data-kpi-card]');
                if (!card) return;
                card.classList.add(cls);
                setTimeout(() => card.classList.remove(cls), 800);
            }

            function updateKpis(data) {
                kpiElements.forEach(el => {
                    const key = el.dataset.kpi;
                    const format = el.dataset.format;
                    if (!key || !format) return;
                    animateKpi(el, data[key] ?? 0, format);
                });
            }

            function renderLowStock(items) {
                const tbody = document.querySelector('#low-stock-list tbody');
                if (!tbody) return;
                if (!items || items.length === 0) {
                    tbody.innerHTML = '<tr><td colspan=\"3\" class=\"text-center text-muted\">Sin alertas de stock bajo</td></tr>';
                    return;
                }

                tbody.innerHTML = items.map(item => `
                    <tr>
                        <td><span class=\"badge text-bg-light\">${item.sku}</span></td>
                        <td>${item.name}</td>
                        <td class=\"text-end\"><span class=\"badge text-bg-danger\">${Number(item.stock).toFixed(3)} / ${Number(item.min).toFixed(3)}</span></td>
                    </tr>
                `).join('');
            }

            function renderDebtors(items) {
                const tbody = document.querySelector('#debtors-list tbody');
                if (!tbody) return;
                if (!items || items.length === 0) {
                    tbody.innerHTML = '<tr><td colspan=\"3\" class=\"text-center text-muted\">Sin deudores pendientes</td></tr>';
                    return;
                }

                tbody.innerHTML = items.map(item => `
                    <tr>
                        <td>${item.name}</td>
                        <td>${item.phone || '-'}</td>
                        <td class=\"text-end text-danger\">${formatter.currency.format(item.balance)}</td>
                    </tr>
                `).join('');
            }

            function renderRecent(recent) {
                const tbody = document.getElementById('recent-sales-body');
                if (!tbody) return;
                const rows = recent?.recentSalesTop10 ?? [];
                if (rows.length === 0) {
                    tbody.innerHTML = '<tr><td colspan=\"5\" class=\"text-center text-muted\">Sin ventas recientes</td></tr>';
                    return;
                }

                tbody.innerHTML = rows.map(row => `
                    <tr>
                        <td>${row.time}</td>
                        <td>${row.customer}</td>
                        <td>${row.method}</td>
                        <td class=\"text-end fw-semibold\">${formatter.currency.format(row.total)}</td>
                        <td class=\"text-end\"><a class=\"btn btn-link btn-sm\" href=\"{{ path('app_sale_ticket', {id: 'SALE_ID'}) }}\" data-sale-id=\"${row.saleId}\">Ver ticket</a></td>
                    </tr>
                `).join('');

                tbody.querySelectorAll('[data-sale-id]').forEach(link => {
                    const saleId = link.dataset.saleId;
                    link.setAttribute('href', '{{ path('app_sale_ticket', {id: 0}) }}'.replace('0', saleId));
                });
            }

            function initCharts(chartsData) {
                const salesHourCtx = document.getElementById('chart-sales-hour');
                const paymentsCtx = document.getElementById('chart-payments');
                const weekCtx = document.getElementById('chart-sales-week');

                const salesByHour = chartsData.salesByHourToday ?? [];
                const salesHourChart = new Chart(salesHourCtx, {
                    type: 'line',
                    data: {
                        labels: salesByHour.map(item => `${item.hour}h`),
                        datasets: [{
                            label: 'Ventas',
                            data: salesByHour.map(item => item.amount),
                            borderColor: '#C62828',
                            backgroundColor: 'rgba(198, 40, 40, 0.12)',
                            fill: true,
                            tension: 0.3,
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: { beginAtZero: true },
                        }
                    }
                });

                const payments = chartsData.paymentDistributionToday ?? [];
                const paymentChart = new Chart(paymentsCtx, {
                    type: 'doughnut',
                    data: {
                        labels: payments.map(item => item.method),
                        datasets: [{
                            data: payments.map(item => item.amount),
                            backgroundColor: ['#C62828', '#F57C00', '#2E86DE', '#6C757D'],
                        }]
                    },
                    options: {
                        plugins: { legend: { position: 'bottom' } }
                    }
                });

                const salesWeek = chartsData.salesLast7Days ?? [];
                const weekChart = new Chart(weekCtx, {
                    type: 'bar',
                    data: {
                        labels: salesWeek.map(item => item.date.slice(5)),
                        datasets: [{
                            label: 'Ventas',
                            data: salesWeek.map(item => item.amount),
                            backgroundColor: '#2E2E2E'
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { legend: { display: false } },
                        scales: { y: { beginAtZero: true } }
                    }
                });

                return { salesHourChart, paymentChart, weekChart };
            }

            function updateCharts(chartsData) {
                const hourly = chartsData.salesByHourToday ?? [];
                dashboardCharts.salesHourChart.data.labels = hourly.map(item => `${item.hour}h`);
                dashboardCharts.salesHourChart.data.datasets[0].data = hourly.map(item => item.amount);
                dashboardCharts.salesHourChart.update('none');

                const payments = chartsData.paymentDistributionToday ?? [];
                dashboardCharts.paymentChart.data.labels = payments.map(item => item.method);
                dashboardCharts.paymentChart.data.datasets[0].data = payments.map(item => item.amount);
                dashboardCharts.paymentChart.update('none');

                const week = chartsData.salesLast7Days ?? [];
                dashboardCharts.weekChart.data.labels = week.map(item => item.date.slice(5));
                dashboardCharts.weekChart.data.datasets[0].data = week.map(item => item.amount);
                dashboardCharts.weekChart.update('none');
            }

            function renderAlerts(alerts) {
                renderLowStock(alerts.lowStockTop5 || []);
                renderDebtors(alerts.topDebtorsTop5 || []);
            }

            function updateStatus(generatedAt, ok = true) {
                if (!generatedAt) {
                    syncStatus.textContent = 'Sincronización con demora';
                    syncStatus.classList.add('text-warning');
                    return;
                }
                const date = new Date(generatedAt);
                const time = date.toLocaleTimeString('es-AR', { hour: '2-digit', minute: '2-digit' });
                syncStatus.textContent = ok ? `Actualizado ${time}` : 'Sincronización con demora';
                syncStatus.classList.toggle('text-warning', !ok);
            }

            function renderAll(payload) {
                updateKpis({
                    ...payload.data.kpisToday,
                    ...payload.data.kpisMonth,
                });
                renderAlerts(payload.data.alerts);
                renderRecent(payload.data.recent);
                updateCharts(payload.data.charts);
                updateStatus(payload.generatedAt, true);
            }

            function startPolling() {
                dashboardPollerId = setInterval(fetchSummary, POLL_MS);
            }

            async function fetchSummary() {
                if (dashboardAbortController) {
                    dashboardAbortController.abort();
                }

                dashboardAbortController = new AbortController();
                try {
                    const response = await fetch('{{ path('app_dashboard_data_summary') }}', {
                        headers: { 'Accept': 'application/json' },
                        signal: dashboardAbortController.signal
                    });

                    if (!response.ok) {
                        throw new Error('No se pudo actualizar');
                    }

                    const payload = await response.json();
                    renderAll(payload);
                } catch (error) {
                    updateStatus(null, false);
                }
            }
        }

        document.addEventListener('DOMContentLoaded', bootDashboard);
        document.addEventListener('turbo:load', bootDashboard);
        document.addEventListener('turbo:before-cache', resetDashboard);
    </script>
{% endblock %}
