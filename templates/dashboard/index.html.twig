{% extends 'base.html.twig' %}

{% block title %}Dashboard | ItaStock{% endblock %}

{% block stylesheets %}
    <meta name="turbo-visit-control" content="reload">
    <style>
        .kpi-card {
            background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
            border: 1px solid #eef0f2;
            border-radius: 12px;
            padding: 16px;
            height: 100%;
        }

        .kpi-label {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .kpi-value {
            font-size: 1.6rem;
            font-weight: 700;
            transition: color 0.3s ease;
        }

        .kpi-up {
            background-color: rgba(25, 135, 84, 0.12);
            transition: background-color 0.5s ease;
        }

        .kpi-down {
            background-color: rgba(220, 53, 69, 0.12);
            transition: background-color 0.5s ease;
        }

        .section-title {
            font-size: 1rem;
            font-weight: 700;
            color: #2e2e2e;
        }

        .table-sm td,
        .table-sm th {
            padding: 0.45rem 0.5rem;
        }

        .status-dot {
            width: 10px;
            height: 10px;
            display: inline-block;
            border-radius: 50%;
        }

        .card-min-h {
            min-height: 340px;
        }

        .dashboard-header {
            gap: 1rem;
        }

        .dashboard-table {
            max-height: 320px;
            overflow-y: auto;
        }

        @media (max-width: 991.98px) {
            .dashboard-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .dashboard-status {
                text-align: left;
                width: 100%;
            }

            .kpi-card {
                padding: 12px;
            }

            .kpi-value {
                font-size: 1.35rem;
            }

            .card-min-h {
                min-height: auto;
            }

            .chart-card canvas {
                min-height: 220px;
            }

            .dashboard-table {
                max-height: 240px;
            }
        }
    </style>
{% endblock %}

