<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body { font-family: Arial, sans-serif; font-size: 12px; color: #222; }
        h1 { font-size: 18px; margin-bottom: 4px; }
        table { width: 100%; border-collapse: collapse; margin-top: 12px; }
        th, td { border: 1px solid #ddd; padding: 6px; }
        th { background: #f5f5f5; text-align: left; }
        .meta { margin-bottom: 12px; }
        .totals { margin-top: 12px; text-align: right; }
    </style>
</head>
<body>
    <h1>IVA ventas</h1>
    <div class="meta">
        <div><strong>Comercio:</strong> {{ business.name }}</div>
        <div><strong>Periodo:</strong> {{ from|date('d/m/Y') }} - {{ to|date('d/m/Y') }}</div>
        <div><strong>Generado:</strong> {{ generatedAt|date('d/m/Y H:i') }}</div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Tipo</th>
                <th>Comprobante</th>
                <th>Cliente</th>
                <th style="text-align: right;">Neto</th>
                <th style="text-align: right;">IVA</th>
                <th style="text-align: right;">Total</th>
            </tr>
        </thead>
        <tbody>
            {% for row in report.invoices %}
                {% set tipo = row.cbteTipo == 'FACTURA_B' ? 'FACTURA B' : row.cbteTipo == 'FACTURA_C' ? 'FACTURA C' : row.cbteTipo == 'NC_B' ? 'NC B' : 'NC C' %}
                <tr>
                    <td>{{ row.issuedAt|date('d/m/Y') }}</td>
                    <td>{{ tipo }}</td>
                    <td>{{ row.posNumber ?: '' }} {{ row.cbteNumero ?: '' }}</td>
                    <td>{{ row.customerName }}</td>
                    <td style="text-align: right;">{{ row.netAmount|number_format(2, '.', ',') }}</td>
                    <td style="text-align: right;">{{ row.vatAmount|number_format(2, '.', ',') }}</td>
                    <td style="text-align: right;">{{ row.totalAmount|number_format(2, '.', ',') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">No hay comprobantes autorizados en el per√≠odo.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="totals">
        <div><strong>Neto:</strong> {{ report.summary.net|number_format(2, '.', ',') }}</div>
        <div><strong>IVA:</strong> {{ report.summary.iva|number_format(2, '.', ',') }}</div>
        <div><strong>Total:</strong> {{ report.summary.total|number_format(2, '.', ',') }}</div>
    </div>
</body>
</html>
