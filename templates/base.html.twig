<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ItaStock{% endblock %}</title>
        <link rel="icon" type="image/svg+xml" href="{{ asset('brand/itastock-logo.svg') }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <style>
            :root {
                --ita-red: #C62828;
                --ita-dark: #2E2E2E;
                --ita-orange: #F57C00;
                --ita-gray: #F4F6F8;
            }

            body {
                background-color: var(--ita-gray);
                font-family: 'Inter', system-ui, -apple-system, sans-serif;
                color: #1f1f1f;
            }

            .navbar {
                background-color: var(--ita-dark) !important;
            }

            .navbar-brand {
                font-weight: 700;
                letter-spacing: 0.01em;
            }

            .btn-primary,
            .btn-primary:focus,
            .btn-primary:active,
            .btn-primary:hover {
                background-color: var(--ita-red) !important;
                border-color: var(--ita-red) !important;
                box-shadow: none;
            }

            .btn-outline-light:hover,
            .btn-outline-light:focus {
                background-color: #ffffff;
                color: var(--ita-dark);
                border-color: #ffffff;
            }

            .brand-accent {
                color: var(--ita-orange);
            }

            .card {
                border: none;
                border-radius: 12px;
            }

            .card.shadow-sm {
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
            }

            main.container {
                padding-bottom: 3rem;
            }
        </style>
        {% block stylesheets %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" defer></script>
        {% block javascripts %}{% endblock %}
    </head>
    <body>
        {% if app.user %}
            <nav class="navbar navbar-expand-lg navbar-dark shadow-sm mb-4">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-items-center gap-2" href="{{ path('app_dashboard') }}">
                        <img src="{{ asset('brand/itastock-logo.svg') }}" alt="ItaStock" width="36" height="36">
                        <span>ItaStock Backoffice</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_dashboard') }}">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_sale_new') }}">Nueva venta</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_cash_status') }}">Caja</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_product_index') }}">Productos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_category_index') }}">Categorías</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_price_list_index') }}">Listas de precio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_customer_index') }}">Clientes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_reports_index') }}">Reportes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_user_index') }}">Usuarios</a>
                                </li>
                            {% endif %}
                        </ul>
                        <div class="d-flex align-items-center gap-3 text-white">
                            {% set sub = subscriptionContext.getCurrentSubscription(app.user) %}
                            {% if sub %}
                                <span class="badge rounded-pill bg-light text-dark">
                                    {{ sub.status }}
                                    {% if sub.status == 'TRIAL' and sub.trialEndsAt %}
                                        · vence {{ sub.trialEndsAt|date('d/m') }}
                                    {% endif %}
                                </span>
                            {% endif %}
                            <span class="fw-semibold">{{ app.user.fullName }}</span>
                            <a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">Cerrar sesión</a>
                        </div>
                    </div>
                </div>
            </nav>
        {% endif %}

        <main class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>
    </body>
</html>
