<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>Etiquetas de productos</title>
        {% set useLabelImage = options.includeLabelImage and labelImagePath %}
        {% if useLabelImage %}
            {% set labelWidth = 40 %}
            {% set labelHeight = 60 %}
            {% set columns = 4 %}
            {% set gap = 4 %}
        {% else %}
            {% set labelWidth = 50 %}
            {% set labelHeight = 20 %}
            {% set columns = 3 %}
            {% set gap = 4 %}
        {% endif %}
        <style>
            @page {
                size: A4;
                margin: 10mm;
            }

            body {
                font-family: 'Inter', sans-serif;
                font-size: 10pt;
                color: #111827;
                margin: 0;
                padding: 0;
            }

            .label-table {
                width: 100%;
                table-layout: fixed;
                border-collapse: separate;
                border-spacing: {{ gap }}mm {{ gap }}mm;
            }

            .label-table td {
                width: {{ labelWidth }}mm;
                height: {{ labelHeight }}mm;
                padding: 0;
                vertical-align: top;
            }

            .label {
                border: 1px solid #e5e7eb;
                border-radius: 3px;
                box-sizing: border-box;
                display: flex;
                flex-direction: column;
                page-break-inside: avoid;
                overflow: hidden;
            }

            .label--with-image {
                padding: 3mm 2.5mm;
                width: {{ labelWidth }}mm;
                height: {{ labelHeight }}mm;
                justify-content: flex-start;
                align-items: center;
            }

            .label--compact {
                padding: 2mm 2.5mm;
                width: {{ labelWidth }}mm;
                height: {{ labelHeight }}mm;
                flex-direction: row;
                align-items: center;
                justify-content: space-between;
                gap: 2mm;
                overflow: hidden;
            }

            .label-name {
                font-weight: 600;
                font-size: 8pt;
                line-height: 1.1;
                min-height: 6mm;
                margin: 0 0 1mm 0;
                text-align: left;
                width: 100%;
                overflow: hidden;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
            }

            .label-name--compact {
                font-size: 7.5pt;
                line-height: 1.1;
                min-height: auto;
                margin: 0;
                text-align: left;
            }

            .label-meta {
                font-size: 7pt;
                color: #374151;
            }

            .label-price {
                font-weight: 700;
                font-size: 9pt;
                margin-top: 0.5mm;
            }

            .label-info {
                display: flex;
                flex-direction: column;
                gap: 0.5mm;
            }

            .label-body {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 2mm;
                margin-top: 1mm;
                width: 100%;
            }

            .label-image {
                width: 100%;
                height: 26mm;
                border-radius: 2px;
                border: 1px solid #e5e7eb;
                overflow: hidden;
                display: flex;
                align-items: center;
                justify-content: center;
                background: #f9fafb;
            }

            .label-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .barcode {
                text-align: center;
                overflow: hidden;
                width: 100%;
            }

            .barcode img {
                max-width: 100%;
                height: 9mm;
                object-fit: contain;
            }

            .barcode-vertical {
                display: flex;
                align-items: center;
                justify-content: center;
                height: 18mm;
                overflow: hidden;
            }

            .barcode-vertical img {
                height: 16mm;
                width: auto;
                transform: none;
            }

            .barcode-value {
                font-size: 7pt;
                margin-top: 0.5mm;
                color: #374151;
                word-break: break-all;
                text-align: center;
            }

            .barcode-value--compact {
                font-size: 6.5pt;
                margin-top: 0.2mm;
                text-align: right;
            }
        </style>
    </head>
    <body>
        <table class="label-table">
            <tbody>
                {% for row in labels|batch(columns, null) %}
                    <tr>
                        {% for label in row %}
                            <td>
                                {% if label %}
                                    <div class="label {{ useLabelImage ? 'label--with-image' : 'label--compact' }}">
                                        {% if useLabelImage %}
                                            <div class="label-image">
                                                <img src="{{ labelImagePath }}" alt="Imagen de etiqueta">
                                            </div>
                                            <div class="label-name">{{ label.product.name }}</div>
                                            {% if not options.showOnlyName %}
                                                <div class="label-meta">SKU: {{ label.product.sku }}</div>
                                                {% if options.showPrice %}
                                                    <div class="label-price">${{ label.product.basePrice|number_format(2, '.', ',') }}</div>
                                                {% endif %}
                                            {% endif %}
                                            {% if options.includeBarcode %}
                                                <div class="barcode">
                                                    {% if label.barcodeDataUri %}
                                                        <div class="barcode-vertical">
                                                            <img src="{{ label.barcodeDataUri }}" alt="C贸digo de barras">
                                                        </div>
                                                        <div class="barcode-value">{{ label.barcodeValue }}</div>
                                                    {% else %}
                                                        <div class="label-meta">Sin c贸digo de barras</div>
                                                    {% endif %}
                                                </div>
                                            {% endif %}
                                        {% else %}
                                            <div class="label-info">
                                                <div class="label-name label-name--compact">{{ label.product.name }}</div>
                                                {% if not options.showOnlyName %}
                                                    <div class="label-meta">SKU: {{ label.product.sku }}</div>
                                                    {% if options.showPrice %}
                                                        <div class="label-price">${{ label.product.basePrice|number_format(2, '.', ',') }}</div>
                                                    {% endif %}
                                                {% endif %}
                                            </div>
                                            {% if options.includeBarcode %}
                                                <div class="barcode">
                                                    {% if label.barcodeDataUri %}
                                                        <img src="{{ label.barcodeDataUri }}" alt="C贸digo de barras">
                                                        <div class="barcode-value barcode-value--compact">{{ label.barcodeValue }}</div>
                                                    {% else %}
                                                        <div class="label-meta">Sin c贸digo de barras</div>
                                                    {% endif %}
                                                </div>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </body>
</html>
