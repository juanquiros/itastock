<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>Etiquetas de productos</title>
        {% set useLabelImage = options.includeLabelImage and labelImagePath %}
        <style>
            @page {
                size: A4;
                margin: 10mm;
            }

            body {
                font-family: 'Inter', sans-serif;
                font-size: 10pt;
                color: #111827;
                margin: 0;
                padding: 0;
            }

            .label-grid {
                display: grid;
                justify-content: center;
            }

            .label-grid--with-image {
                grid-template-columns: repeat(5, 35mm);
                grid-auto-rows: 60mm;
                gap: 3mm;
            }

            .label-grid--compact {
                grid-template-columns: repeat(3, 50mm);
                grid-auto-rows: 22mm;
                gap: 4mm;
            }

            .label {
                border: 1px solid #e5e7eb;
                border-radius: 3px;
                box-sizing: border-box;
                display: flex;
                flex-direction: column;
                page-break-inside: avoid;
            }

            .label--with-image {
                padding: 3mm 2.5mm;
                width: 35mm;
                height: 60mm;
                justify-content: flex-start;
            }

            .label--compact {
                padding: 2mm 2.5mm;
                width: 50mm;
                height: 22mm;
                flex-direction: row;
                align-items: center;
                justify-content: space-between;
                gap: 2mm;
                overflow: hidden;
            }

            .label-name {
                font-weight: 600;
                font-size: 9pt;
                line-height: 1.1;
                min-height: 8mm;
                margin-bottom: 1.5mm;
                text-align: center;
            }

            .label-name--compact {
                font-size: 7.5pt;
                line-height: 1.1;
                min-height: auto;
                margin: 0;
                text-align: left;
            }

            .label-meta {
                font-size: 8pt;
                color: #374151;
            }

            .label-price {
                font-weight: 700;
                font-size: 10pt;
                margin-top: 0.5mm;
            }

            .label-info {
                display: flex;
                flex-direction: column;
                gap: 0.5mm;
            }

            .label-body {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 2mm;
                align-items: center;
            }

            .label-body--full {
                grid-template-columns: 1fr;
            }

            .label-image {
                width: 100%;
                height: 30mm;
                border-radius: 2px;
                border: 1px solid #e5e7eb;
                overflow: hidden;
                display: flex;
                align-items: center;
                justify-content: center;
                background: #f9fafb;
            }

            .label-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .barcode {
                text-align: center;
                overflow: hidden;
            }

            .barcode img {
                max-width: 100%;
                height: 10mm;
                object-fit: contain;
            }

            .barcode-vertical {
                display: flex;
                align-items: center;
                justify-content: center;
                height: 30mm;
                overflow: hidden;
            }

            .barcode-vertical img {
                height: 22mm;
                width: auto;
                transform: rotate(90deg);
            }

            .barcode-value {
                font-size: 7.5pt;
                margin-top: 1mm;
                color: #374151;
                word-break: break-all;
            }

            .barcode-value--compact {
                font-size: 6.5pt;
                margin-top: 0.2mm;
                text-align: right;
            }
        </style>
    </head>
    <body>
        <div class="label-grid {{ useLabelImage ? 'label-grid--with-image' : 'label-grid--compact' }}">
            {% for label in labels %}
                <div class="label {{ useLabelImage ? 'label--with-image' : 'label--compact' }}">
                    {% if useLabelImage %}
                        <div class="label-name">{{ label.product.name }}</div>
                        {% if not options.showOnlyName %}
                            <div class="label-meta">SKU: {{ label.product.sku }}</div>
                            {% if options.showPrice %}
                                <div class="label-price">${{ label.product.basePrice|number_format(2, '.', ',') }}</div>
                            {% endif %}
                        {% endif %}
                        <div class="label-body">
                            <div class="label-image">
                                <img src="{{ labelImagePath }}" alt="Imagen de etiqueta">
                            </div>
                            {% if options.includeBarcode %}
                                <div class="barcode">
                                    {% if label.barcodeDataUri %}
                                        <div class="barcode-vertical">
                                            <img src="{{ label.barcodeDataUri }}" alt="C贸digo de barras">
                                        </div>
                                        <div class="barcode-value">{{ label.barcodeValue }}</div>
                                    {% else %}
                                        <div class="label-meta">Sin c贸digo de barras</div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                    {% else %}
                        <div class="label-info">
                            <div class="label-name label-name--compact">{{ label.product.name }}</div>
                            {% if not options.showOnlyName %}
                                <div class="label-meta">SKU: {{ label.product.sku }}</div>
                                {% if options.showPrice %}
                                    <div class="label-price">${{ label.product.basePrice|number_format(2, '.', ',') }}</div>
                                {% endif %}
                            {% endif %}
                        </div>
                        {% if options.includeBarcode %}
                            <div class="barcode">
                                {% if label.barcodeDataUri %}
                                    <img src="{{ label.barcodeDataUri }}" alt="C贸digo de barras">
                                    <div class="barcode-value barcode-value--compact">{{ label.barcodeValue }}</div>
                                {% else %}
                                    <div class="label-meta">Sin c贸digo de barras</div>
                                {% endif %}
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </body>
</html>
