{% extends 'public/base_public.html.twig' %}

{% block title %}{{ page.title }} | ItaStock{% endblock %}

{% block meta_description %}
    {% if page.metaDescription %}
        <meta name="description" content="{{ page.metaDescription }}">
    {% endif %}
{% endblock %}

{% block body %}
    <section class="hero text-center">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <span class="badge bg-light text-dark mb-3 px-3 py-2 rounded-pill border">ItaStock</span>
                <h1 class="fw-bold display-5 mb-3">{{ page.title }}</h1>
            </div>
        </div>
    </section>

    <section class="pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 p-lg-5">
                        <article class="content-body">
                            {{ page.bodyHtml|raw }}
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4 p-lg-5">
                        <h2 class="h4 mb-2">Solicitar demo</h2>
                        <p class="text-muted mb-4">Dejanos tu email y te ayudamos a activar una demo.</p>

                        {% if demoSubmitted %}
                            <div class="alert alert-success">¡Gracias! Recibimos tu solicitud de demo.</div>
                        {% endif %}

                        {{ form_start(demoForm) }}
                            <div class="row g-3">
                                <div class="col-md-6">
                                    {{ form_row(demoForm.name) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(demoForm.businessName) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(demoForm.email) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(demoForm.phone) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_label(demoForm.captchaAnswer, '¿Cuánto es ' ~ demoCaptcha.label ~ '?') }}
                                    {{ form_widget(demoForm.captchaAnswer) }}
                                    {{ form_errors(demoForm.captchaAnswer) }}
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-primary" type="submit">Enviar solicitud</button>
                            </div>
                        {{ form_end(demoForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
