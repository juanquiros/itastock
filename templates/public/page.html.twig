{% extends 'public/base_public.html.twig' %}

{% block title %}{{ page.title }} | ItaStock{% endblock %}

{% block meta_description %}
    {% if page.metaDescription %}
        <meta name="description" content="{{ page.metaDescription }}">
    {% endif %}
{% endblock %}

{% block meta_image %}
    {% if page.metaImagePath and not (page.metaImagePath starts with 'data:') %}
        {% set meta_image_url = page.metaImagePath starts with 'http' ? page.metaImagePath : absolute_url(page.metaImagePath) %}
        <meta property="og:image" content="{{ meta_image_url }}">
        <meta property="og:image:width" content="1200">
        <meta property="og:image:height" content="630">
        <meta property="og:image:alt" content="{{ page.title }}">
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:image" content="{{ meta_image_url }}">
    {% endif %}
{% endblock %}

{% block body %}
    <section class="hero text-center">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <span class="badge bg-light text-dark mb-3 px-3 py-2 rounded-pill border">ItaStock</span>
                <h1 class="fw-bold display-5 mb-3">{{ page.title }}</h1>
            </div>
        </div>
    </section>

    <section class="pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 p-lg-5">
                        <article class="content-body">
                            {{ page.bodyHtml|raw }}
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
