{% extends 'public/base_public.html.twig' %}

{% block title %}Planes y precios | ItaStock{% endblock %}
{% block meta_description %}
    <meta name="description" content="Planes de ItaStock para gestionar tu stock, ventas y equipos. Elige el plan que mejor se adapte a tu comercio.">
{% endblock %}

{% block body %}
    <section class="hero text-center">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">Planes flexibles</span>
                <h1 class="fw-bold display-5 mt-3 mb-3">Elegí el plan que mejor se adapta a tu negocio</h1>
                <p class="lead text-muted mb-0">Precios en {{ plansData|first ? plansData|first.plan.currency : 'ARS' }}.</p>
            </div>
        </div>
    </section>

    <section class="pb-5">
        <div class="row g-4">
            {% for planData in plansData %}
                {% set plan = planData.plan %}
                <div class="col-md-6 col-xl-4">
                    <div class="card h-100 border-0 shadow-sm {{ plan.isFeatured ? 'border border-2 border-danger' : '' }}">
                        <div class="card-body p-4 d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h2 class="h4 fw-bold mb-0">{{ plan.name }}</h2>
                                {% if plan.isFeatured %}
                                    <span class="badge badge-featured text-white">Recomendado</span>
                                {% endif %}
                            </div>
                            <p class="text-muted small mb-4">Código: {{ plan.code }}</p>
                            <div class="mb-4">
                                <div class="display-6 fw-bold text-danger">${{ plan.priceMonthly|number_format(2, ',', '.') }}</div>
                                <p class="text-muted mb-0">/ mes · Moneda {{ plan.currency }}</p>
                            </div>
                            <div class="mb-4">
                                <h3 class="h6 text-uppercase text-muted">Incluye</h3>
                                {% if planData.features %}
                                    <ul class="list-unstyled mt-2">
                                        {% for feature in planData.features %}
                                            <li class="d-flex align-items-start gap-2 mb-2">
                                                <span class="text-success">•</span>
                                                <span>{{ feature }}</span>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% elseif planData.featuresRaw %}
                                    <p class="text-muted mb-0">{{ planData.featuresRaw }}</p>
                                {% else %}
                                    <p class="text-muted mb-0">Personalizamos este plan a tu medida.</p>
                                {% endif %}
                            </div>
                            <div class="mt-auto d-grid">
                                <a class="btn btn-primary" href="{{ path('public_contact') }}">Quiero saber más</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">Estamos preparando los planes. Vuelve pronto.</div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
