{% extends 'platform/base_platform.html.twig' %}

{% block header_title %}{{ category.id ? 'Editar categoría global' : 'Nueva categoría global' }}{% endblock %}

{% block body %}
    <div class="mb-3">
        <a class="btn btn-outline-secondary" href="{{ path('platform_catalog_category_index') }}">Volver</a>
    </div>
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.isActive) }}
        <button class="btn btn-primary mt-3">{{ category.id ? 'Guardar' : 'Crear' }}</button>
    {{ form_end(form) }}
{% endblock %}
