{% extends 'platform/base_platform.html.twig' %}

{% block header_title %}Usuarios de {{ business.name }}{% endblock %}

{% block body %}
    <div class="mb-3">
        <a class="btn btn-outline-secondary" href="{{ path('platform_business_show', {id: business.id}) }}">Volver</a>
    </div>
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Nombre</th>
                    <th>Roles</th>
                    <th>Activo</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for membership in memberships %}
                    <tr>
                        <td>{{ membership.user.email }}</td>
                        <td>{{ membership.user.fullName }}</td>
                        <td>{{ membership.role }}</td>
                        <td>{{ membership.isActive ? 'SÃ­' : 'No' }}</td>
                        <td class="text-end">
                            <form method="post" action="{{ path('platform_business_user_toggle', {businessId: business.id, userId: membership.user.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle_user_' ~ membership.user.id) }}">
                                <button class="btn btn-sm {{ membership.isActive ? 'btn-outline-danger' : 'btn-outline-success' }}" type="submit">
                                    {{ membership.isActive ? 'Desactivar' : 'Activar' }}
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="5">Sin usuarios.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
