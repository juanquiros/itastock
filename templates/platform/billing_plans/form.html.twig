{% extends 'platform/base_platform.html.twig' %}

{% block header_title %}{{ plan.id ? 'Editar plan de billing' : 'Nuevo plan de billing' }}{% endblock %}

{% block body %}
    <div class="mb-3">
        <a class="btn btn-outline-secondary" href="{{ path('platform_billing_plans_index') }}">Volver</a>
    </div>
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.price) }}
        {{ form_row(form.currency) }}
        {{ form_row(form.frequency) }}
        {{ form_row(form.frequencyType) }}
        {{ form_row(form.isActive) }}
        <button class="btn btn-primary mt-3">{{ plan.id ? 'Guardar' : 'Crear' }}</button>
    {{ form_end(form) }}
{% endblock %}
