{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión | ItaStock{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="text-center mb-4 mt-4">
                <img src="{{ asset('brand/itastock-logo.svg') }}" alt="ItaStock" width="72" height="72" class="mb-2">
                <h1 class="h4 fw-semibold mb-0">ItaStock</h1>
                <p class="text-muted">La base de tu comercio</p>
            </div>
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h2 class="h5 mb-1">Acceso backoffice</h2>
                            <p class="mb-0 text-muted">Control diario, sin vueltas.</p>
                        </div>
                        <span class="badge text-bg-dark">PRO</span>
                    </div>

                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post" novalidate>
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Correo electrónico</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Contraseña</label>
                            <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">
                                Entrar
                            </button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <a class="text-decoration-none" href="{{ path('app_password_request') }}">¿Olvidaste tu contraseña?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
